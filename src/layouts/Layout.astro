---
import { RUN } from '../lib/nexus.js';
const { title = 'Primis Nexus' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" /><meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <script type="module">
      import { fire } from '/src/lib/nexus.js';
      fire('pageview', { path: location.pathname });
    </script>
    <noscript><img src={`${RUN}/api/events?payload=%7B%22type%22%3A%22noscript%22%7D`} width="1" height="1" alt=""></noscript>
    <style>body{font-family:system-ui;margin:24px} a,button{font-size:18px}</style>
  </head>
  <body><slot /></body>
</html>
